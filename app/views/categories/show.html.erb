<div class="container">
  <h1>Products:</h1>
  <div class="row row-cols-2">
    <% @records.each do |records| %>
      <div class="col">
        <dl>
          <dt> <%= records.title %> </dt>
        </dl>
        <dl>
          <%= image_tag("#{records.image}", height: '150') %>
          <dt>Redaction rating:⭐<%= records.rating %></dt>
          <dt>Users rating:⭐<%= records.user_rating.round(2) %></dt>
        </dl>
        <%= link_to 'Show', records, class: 'btn btn-dark' %>
      </div>
    <% end %>
  </div>
  <%== pagy_bootstrap_nav(@pagy) %>
  <%== pagy_info(@pagy) %>
</div>