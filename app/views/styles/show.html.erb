<p>
  <div class="text-center">
    <h2>About this style:</h2>
    <%= @style.content %>
  </div>
</p>

<div class="container">
  <h3 class="text-center">Categories:</h3>
  <div class="row row-cols-3">
  <% @categories.each do |records| %>
      <div class="col">
        <dl>
          <dt> <%= link_to records.title, records, class: 'btn btn-dark' %> </dt>
        </dl>
      </div>
  <% end %>
  </div>
</div>

<div class="container">
  <h3 class="text-center">Products:</h3>
  <div class="row row-cols-2">
    <% @records.each do |records| %>
      <div class="col">
        <dl>
          <dt> <%= records.title %> </dt>
        </dl>
          <%= image_tag("#{records.image}", height: '150') %>
        <dl>
          <dt>Redaction rating:⭐<%= records.rating %></dt>
          <dt>Users rating:⭐<%= records.user_rating.round(2) %></dt>
        </dl>
        <%= link_to 'Show', records, class: 'btn btn-dark' %>
      </div>
    <% end %>
  </div>
  <%== pagy_bootstrap_nav(@pagy) %>
  <%== pagy_info(@pagy) %>
</div>