<div class="container">
  <h1>Styles</h1>
  <div class="row row-cols-3">
    <% @styles.each do |styles| %>
      <div class="col">
        <dl>
          <dt> <%= styles.title %> </dt>
        </dl>
        <dl>
          <dt> 
            <%= link_to 'Show', styles, class: 'btn btn-dark' %> 
          </dt>
        </dl>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <h1>Products</h1>
  <div class="row row-cols-3">
    <% @records.each do |records| %>
      <div class="col">
        <dl>
          <dt> <%= records.title %> </dt>
        </dl>
        <%= image_tag("#{records.image}", height: '150') %>
        <dl>
          <dt>Redaction rating:⭐<%= records.rating %></dt>
          <dt>Users rating:⭐<%= records.user_rating.round(2) %></dt>
          <dt> 
            <%= link_to 'Show', records, class: 'btn btn-dark' %>
          </dt>
        </dl>
      </div>
    <% end %>
  </div>
  <%== pagy_bootstrap_nav(@pagy) %>
  <%== pagy_info(@pagy) %>
</div>