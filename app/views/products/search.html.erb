<div class="container">
  <h1>Products where name <%= params[:q] %></h1>
  <div class="row row-cols-2">
    <% @products.each do |records| %>
      <div class="col">
        <dl>
          <dt> <%= records.title %> </dt>
        </dl>
        <%= image_tag("#{records.image}", height: '150', width: '150') %>
        <dl>
          <dt> 
            <%= link_to 'Show', records, class: 'btn btn-primary' %>
          </dt>
        </dl>
      </div>
    <% end %>
  </div>
  <%== pagy_nav(@pagy) %>
  <%== pagy_info(@pagy) %>
</div>