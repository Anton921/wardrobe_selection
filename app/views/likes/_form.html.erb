<%= form_with model: [@product, @product.likes.build] do |f| %>
  <% if current_user %>
    <div class="actions">
      <%= f.submit '❤️', class: 'btn btn-black' %>
    </div>
  <% else %>
    <%= link_to "Sign Up", new_author_path %> or
    <%= link_to "Log In", new_session_path %>
  <% end %>
<% end %>